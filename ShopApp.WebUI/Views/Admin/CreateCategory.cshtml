@model ShopApp.EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Create Category</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Category" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CategoryList">Back to List</a>
</div>

